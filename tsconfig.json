{
  "include": ["src/**/*.js", "test/**/*.js"],
  "exclude": [],
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "target": "ES2022",
    "module": "node16",
    "moduleResolution": "node16",
    "strict": false,
    "skipLibCheck": true,
    "ignoreDeprecations": "6.0",
    "types": ["mocha", "node"],
    "typeRoots": ["node_modules/@types", "test"]
  }
}
